%sets up weight matricies
function[Params] =  ForwardProp(Model, Params)

fprintf('forward prop..\n');
net = cell(Model.nLayers,1);
for i=1:Model.nLayers-1
  net{i} = Param.a{i}*Param.w{i};

  if strcmp(Model.sigma, 'tanh')
    a{i+1} = tanh(net{i});
  else
    a{i+1} = 1./(1+exp(-net{i}));
  end
  % if bias, need to reset the last row of a{i+1} to 1
  if Model.bias
    a{i+1}(:,end) = ones(size(a{i+1},1) ,1);
  end    

end
